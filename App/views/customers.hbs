<!DOCTYPE html>
<html lang="en">
<head>
    <link rel='stylesheet' type='text/css' media='screen' href='main.css'>
    <title>Customers</title>
</head>
<body>
    <header> 
        <h2 class="header-h2">ISOS Management System</h2> 
        <nav class="global">
            <a href="/"><strong>Home</strong></a>
        </nav>
    </header>

    <main>
        <section>
            <nav class="global-entities">
                <a href="/customers" class="customers-link"> <strong>Customers</strong></a>
                <a href="/orders"> <strong>Orders</strong></a>
                <a href="/products"> <strong>Products</strong></a>
                <a href="/brands"> <strong>Brands</strong></a>
                <a href="/suppliers"> <strong>Suppliers</strong></a>
                <a href="/orderProducts"> <strong>OrderProducts</strong></a>
                <a href="/productInstances"> <strong>ProductInstances</strong></a>
            </nav>
        </section>
        <section id="browse">
            <h2>Customers</h2>
            <table id="customers-table">
                <thead>
                    <tr>
                        <th><button class="btn" onclick="showAddForm()">Add</button></th>
                        <th></th>
                        <th>Customer ID</th>
                        <th>Customer Name</th>
                        <th>Email</th>
                        <th>Address</th>
                        <th>Phone Number</th>
                        <th>Username</th>
                    </tr>
                </thead>
                <tbody>
                    {{#each data}}
                    <tr data-id="{{customerID}}">
                        <td><button class="btn-edit" onclick="showUpdateForm({{customerID}})">Edit</button></td>
                        <td><button class="btn-delete" onclick="deleteCustomer({{customerID}})">Delete</button></td>
                        <td>{{customerID}}</td>
                        <td>{{customerName}}</td>
                        <td>{{customerEmail}}</td>
                        <td>{{customerAddress}}</td>
                        <td>{{phoneNumber}}</td>
                        <td>{{username}}</td>
                    </tr>
                    {{/each}}
                </tbody>
            </table>
        </section>

        <section id="add-form" style="display: none;">
            <div id="browse">
            <h2>Add Customer</h2>
            <form id="addCustomerForm">
                <label for="customerName">Customer Name</label>
                <input type="text" id="customerName" name="customerName" required>

                <label for="customerEmail">Email</label>
                <input type="email" id="customerEmail" name="customerEmail" required>

                <label for="customerAddress">Address</label>
                <input type="text" id="customerAddress" name="customerAddress">

                <label for="phoneNumber">Phone Number</label>
                <input type="text" id="phoneNumber" name="phoneNumber">

                <label for="username">Username</label>
                <input type="text" id="username" name="username" required>



                <button type="submit" class="btn table-btn">Add Customer</button>
                <button type="button" class="btn-delete table-btn2" onclick="hideAddForm()">Cancel</button>
            </form>
            </div>
        </section>

        <section id="update-form" style="display: none;">
            <div id="browse">
            <h2>Update Customer</h2>
            <form id="updateCustomerForm">

                <input type="hidden" id="updateCustomerID">

                <label for="updateCustomerName">Customer Name</label>
                <input type="text" id="updateCustomerName">

                <label for="updateCustomerEmail">Email</label>
                <input type="email" id="updateCustomerEmail">

                <label for="updateCustomerAddress">Address</label>
                <input type="text" id="updateCustomerAddress">

                <label for="updatePhoneNumber">Phone Number</label>
                <input type="text" id="updatePhoneNumber">

                <label for="updateUsername">Username</label>
                <input type="text" id="updateUsername" >


                <button type="submit" class="btn table-btn">Update Customer</button>
                <button type="button" class="btn-delete table-btn2" onclick="hideUpdateForm()">Cancel</button>
            </form>
            </div>
        </section>
    </main>

    <footer>
        <nav class="global4">
            <a>&copy; Group 72: Tess Ellis & Willem De Veirman</a>
        </nav>
    </footer>

    <script src="/js/customers.js"></script>
</body>
</html>